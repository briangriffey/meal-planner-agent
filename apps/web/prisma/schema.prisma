// This is a symlink to the main schema
// Re-export from packages/database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Import from main schema - all models from packages/database/prisma/schema.prisma
// For now, we'll just reference the main schema location

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  emailVerified DateTime?
  image         String?
  externalUserId String? @unique

  accounts       Account[]
  sessions       Session[]
  mealPlans      MealPlan[]
  userPreferences UserPreferences?
  apiKeys        ApiKey[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([externalUserId])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model UserPreferences {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  emailRecipients String[] @default([])
  scheduleDayOfWeek Int     @default(0)
  scheduleHour      Int     @default(10)
  scheduleMinute    Int     @default(0)
  scheduleEnabled   Boolean @default(true)
  numberOfMeals      Int      @default(7)
  servingsPerMeal    Int      @default(2)
  minProteinPerMeal  Int      @default(40)
  maxCaloriesPerMeal Int      @default(600)
  dietaryRestrictions String[] @default([])
  hebEnabled Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_preferences")
}

model MealPlan {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  weekStartDate DateTime
  generatedAt   DateTime        @default(now())
  status        MealPlanStatus  @default(PENDING)
  jobId         String?   @unique
  jobStartedAt  DateTime?
  jobCompletedAt DateTime?
  jobError      String?   @db.Text
  meals     Json?
  emailSent Boolean @default(false)
  emailSentAt DateTime?
  emailHtml String? @db.Text
  iterationCount Int?
  claudeModel    String?

  mealRecords MealRecord[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, weekStartDate])
  @@index([status])
  @@index([jobId])
  @@map("meal_plans")
}

enum MealPlanStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

model MealRecord {
  id         String   @id @default(cuid())
  userId     String
  mealPlanId String
  mealPlan   MealPlan @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)

  day  String
  name String
  calories Int?
  protein  Int?
  carbs    Int?
  fat      Int?
  fiber    Int?
  ingredients  Json?
  instructions Json?
  prepTime     String?
  cookTime     String?

  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([name])
  @@map("meal_records")
}

model ApiKey {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name       String
  key        String   @unique
  lastUsedAt DateTime?
  expiresAt  DateTime?

  createdAt DateTime @default(now())

  @@index([key])
  @@index([userId])
  @@map("api_keys")
}
