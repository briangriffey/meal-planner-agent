{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@meal-planner/core": ["./packages/core/src"],
      "@meal-planner/database": ["./packages/database/src"],
      "@meal-planner/queue": ["./packages/queue/src"]
    }
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "dist", ".next"]
}
