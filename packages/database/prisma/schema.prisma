// Prisma schema for Meal Planner Agent
// Database: PostgreSQL

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// NextAuth.js Models
// ============================================================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // Hashed password for email/password auth
  emailVerified DateTime?
  image         String?

  // External user ID for legacy compatibility (e.g., "brian", "allison")
  externalUserId String? @unique

  // Relations
  accounts       Account[]
  sessions       Session[]
  mealPlans      MealPlan[]
  userPreferences UserPreferences?
  apiKeys        ApiKey[]

  // Household relations
  ownedHouseholds       Household[]       @relation("HouseholdOwner")
  householdMemberships  HouseholdMember[]
  sentInvitations       HouseholdInvitation[] @relation("InvitationInviter")
  acceptedInvitations   HouseholdInvitation[] @relation("InvitationAcceptor")

  // Favorite recipes
  favoriteRecipes FavoriteRecipe[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([externalUserId])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================================================
// Application Models
// ============================================================================

model UserPreferences {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Schedule preferences
  scheduleDayOfWeek Int     @default(0) // 0 = Sunday, 6 = Saturday
  scheduleHour      Int     @default(10)
  scheduleMinute    Int     @default(0)
  scheduleEnabled   Boolean @default(true)

  // Meal preferences
  numberOfMeals      Int      @default(7)
  servingsPerMeal    Int      @default(2)
  minProteinPerMeal  Int      @default(40)
  maxCaloriesPerMeal Int      @default(600)
  dietaryRestrictions String[] @default([])

  // Feature flags
  hebEnabled Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_preferences")
}

model MealPlan {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Household relation (optional, for household-shared plans)
  householdId String?
  household   Household? @relation(fields: [householdId], references: [id], onDelete: SetNull)

  // Metadata
  weekStartDate DateTime
  generatedAt   DateTime        @default(now())
  status        MealPlanStatus  @default(PENDING)

  // Job tracking
  jobId         String?   @unique
  jobStartedAt  DateTime?
  jobCompletedAt DateTime?
  jobError      String?   @db.Text

  // Email tracking
  emailSent Boolean @default(false)
  emailSentAt DateTime?
  emailHtml String? @db.Text

  // Agent execution details
  iterationCount Int?
  claudeModel    String?

  // Relations
  mealRecords MealRecord[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, weekStartDate])
  @@index([status])
  @@index([jobId])
  @@map("meal_plans")
}

enum MealPlanStatus {
  PENDING    // Job queued but not started
  PROCESSING // Agent is working
  COMPLETED  // Successfully generated
  FAILED     // Error occurred
  CANCELLED  // User cancelled
}

// Individual meal records for analytics and history tracking
model MealRecord {
  id         String   @id @default(cuid())
  userId     String
  mealPlanId String
  mealPlan   MealPlan @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)

  // Meal details
  day  String // "Monday", "Tuesday", etc.
  name String // Meal name

  // Nutrition (optional, parsed from agent response)
  calories Int?
  protein  Int?
  carbs    Int?
  fat      Int?
  fiber    Int?

  // Recipe details (stored as JSON for flexibility)
  ingredients  Json? // Array of { item: string, amount: string }
  instructions Json? // Array of strings
  prepTime     String?
  cookTime     String?

  // Relations
  favoriteRecipes FavoriteRecipe[]

  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([name]) // For finding duplicate meals
  @@map("meal_records")
}

// User's favorite recipes for easy access and reuse
model FavoriteRecipe {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Optional reference to the original meal record
  mealRecordId String?
  mealRecord   MealRecord? @relation(fields: [mealRecordId], references: [id], onDelete: SetNull)

  // Meal details
  name String
  day  String? // Original day when it was served

  // Nutrition (optional)
  calories Int?
  protein  Int?
  carbs    Int?
  fat      Int?
  fiber    Int?

  // Recipe details (stored as JSON for flexibility)
  ingredients  Json? // Array of { item: string, amount: string }
  instructions Json? // Array of strings
  prepTime     String?
  cookTime     String?

  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([userId, name]) // For searching favorites by name
  @@map("favorite_recipes")
}

// API Keys for CLI access
model ApiKey {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name       String // e.g., "CLI Key", "Mobile App"
  key        String   @unique // Hashed API key
  lastUsedAt DateTime?
  expiresAt  DateTime?

  createdAt DateTime @default(now())

  @@index([key])
  @@index([userId])
  @@map("api_keys")
}

// ============================================================================
// Household Management Models
// ============================================================================

enum HouseholdRole {
  OWNER
  MEMBER
}

model Household {
  id      String @id @default(cuid())
  name    String
  ownerId String
  owner   User   @relation("HouseholdOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  // Relations
  members     HouseholdMember[]
  invitations HouseholdInvitation[]
  mealPlans   MealPlan[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
  @@map("households")
}

model HouseholdMember {
  id          String        @id @default(cuid())
  householdId String
  household   Household     @relation(fields: [householdId], references: [id], onDelete: Cascade)
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  role        HouseholdRole @default(MEMBER)

  // Relations
  preferences MemberPreferences?

  joinedAt DateTime @default(now())

  @@unique([householdId, userId]) // A user can only be a member once per household
  @@index([householdId])
  @@index([userId])
  @@map("household_members")
}

model MemberPreferences {
  id                String          @id @default(cuid())
  householdMemberId String          @unique
  householdMember   HouseholdMember @relation(fields: [householdMemberId], references: [id], onDelete: Cascade)

  // Individual meal preferences
  dietaryRestrictions String[] @default([])
  minProteinPerMeal   Int?
  maxCaloriesPerMeal  Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("member_preferences")
}

model HouseholdInvitation {
  id          String    @id @default(cuid())
  householdId String
  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)

  // Inviter
  inviterUserId String
  inviterUser   User   @relation("InvitationInviter", fields: [inviterUserId], references: [id], onDelete: Cascade)

  // Invitee
  email String

  // Token for email verification
  token     String   @unique
  expiresAt DateTime

  // Acceptance tracking
  acceptedAt       DateTime?
  acceptedByUserId String?
  acceptedByUser   User?     @relation("InvitationAcceptor", fields: [acceptedByUserId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([householdId])
  @@index([token])
  @@index([email])
  @@map("household_invitations")
}
