{
  "name": "meal-planner-agent",
  "version": "2.0.0",
  "description": "AI-powered meal planning web application with Claude AI - Monorepo",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm -r build",
    "build:clean": "rm -rf apps/web/.next packages/*/dist packages/*/src/**/*.js && pnpm -r build",
    "build:production": "NODE_ENV=production rm -rf apps/web/.next packages/*/dist packages/*/src/**/*.js && NODE_ENV=production pnpm -r build",
    "build:docker": "rm -rf apps/web/.next packages/*/dist packages/*/src/**/*.js node_modules && pnpm install --frozen-lockfile && pnpm --filter @meal-planner/database generate && pnpm --filter @meal-planner/database build && pnpm --filter @meal-planner/core build && pnpm --filter @meal-planner/queue build && pnpm --filter @meal-planner/web build",
    "dev": "pnpm --filter @meal-planner/web dev",
    "dev:worker": "pnpm --filter @meal-planner/queue dev",
    "worker": "pnpm --filter @meal-planner/queue start",
    "db:migrate": "pnpm --filter @meal-planner/database migrate",
    "db:migrate:deploy": "pnpm --filter @meal-planner/database migrate:deploy",
    "db:generate": "pnpm --filter @meal-planner/database generate",
    "db:studio": "pnpm --filter @meal-planner/database studio",
    "db:push": "pnpm --filter @meal-planner/database push",
    "db:seed": "pnpm --filter @meal-planner/database seed",
    "test:agent": "ts-node scripts/test-agent.ts",
    "test:email": "ts-node scripts/test-email.ts --send",
    "test:setup": "bash scripts/test-setup.sh",
    "test:teardown": "bash scripts/test-teardown.sh",
    "test:integration": "bash scripts/run-integration-tests.sh",
    "test:docker:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:docker:down": "docker-compose -f docker-compose.test.yml down -v",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "enable-schedules": "ts-node scripts/enable-schedules.ts",
    "docker:up": "docker-compose -f docker-compose.full.yml up --build",
    "docker:down": "docker-compose -f docker-compose.full.yml down -v"
  },
  "keywords": [
    "meal-planner",
    "claude",
    "ai-agent",
    "nextjs",
    "web-app"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.10.2",
    "dotenv": "^16.4.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}